@namespace GovBright.Components

<CascadingValue Value="this">
    <div class="govuk-tabs" data-module="govuk-tabs">
        <h2 class="govuk-tabs__title">
            Feedback Form
        </h2>
        <ul class="govuk-tabs__list">
            @foreach (var step in Steps)
            {
                <li id="step-@(StepsIndex(step) + 1)" class="govuk-tabs__list-item @((ActiveStep == step) ? "govuk-tabs__list-item--selected" : "")">
                    <a class="govuk-tabs__tab" href="javascript: void(0)"
                   @onclick="@(e=> SetActive(step))">@step.Name</a>
                </li>
            }
        </ul>
        <div class="govuk-tabs__panel">
            @ChildContent
        </div>
    </div>
    <button class="govuk-button" data-module="govuk-button" type="button"
            disabled="@(ActiveStepIx == 0)" @onclick="GoBack">
        Previous
    </button>
    <button class="govuk-button" data-module="govuk-button"
            type="@(IsLastStep ? "submit" : "button")" @onclick="GoNext">
        @(IsLastStep ? "Submit" : "Next")
    </button>
</CascadingValue>



