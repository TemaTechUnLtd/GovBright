@page "/viewfeedback"
@attribute [Authorize]

<h3>View Feedback</h3>

@if (FeedbackSet.Any())
{
   <table>
    <tr>
        <th>Feedback Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Lighting OK</th>
        <th>Brightness</th>
        <th>Date Created</th>
    </tr>



    @foreach (var item in FeedbackSet)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>@item.LightingOk</td>
            <td>@item.Brightness</td>
            <td>@item.CreatedDate</td>
        </tr>
    }

    </table>
}
else
{
    <p>No feedback to show</p>
}


